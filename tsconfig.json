{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}